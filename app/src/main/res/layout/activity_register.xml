<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        android:gravity="center"
        tools:context=".LoginActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/iconFB"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textColorHint="#ffff"
                    >

                    <EditText
                        android:id="@+id/namaPell"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama"
                        android:maxLines="1"
                        android:backgroundTint="#ffff"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffff"
                    >

                    <EditText
                        android:id="@+id/no_ktp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor KTP"
                        android:maxLines="1"
                        android:backgroundTint="#ffff"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffff"
                    >

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:maxLines="1"
                        android:backgroundTint="#ffff"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffff"
                    >

                    <EditText
                        android:id="@+id/no_telp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor KTP"
                        android:maxLines="1"
                        android:backgroundTint="#ffff"
                        />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat/Lokasi Pasang"
                    android:textColor="#ffff"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffff"
                    >

                    <EditText
                        android:id="@+id/peta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Koordinat Peta"
                        android:maxLines="1"
                        android:backgroundTint="#ffff"
                        android:clickable="false"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffff"
                    >

                    <EditText
                        android:id="@+id/fotoKtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Foto KTP"
                        android:maxLines="1"
                        android:backgroundTint="#ffff"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffff"
                    >

                    <EditText
                        android:id="@+id/tarif_air"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Daftar Tarif Air"
                        android:maxLines="1"
                        android:backgroundTint="#ffff"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#ffff"
                    >

                    <EditText
                        android:id="@+id/pilihTarif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih Tarif Air"
                        android:maxLines="1"
                        android:backgroundTint="#ffff"
                        />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daftar"
                    android:textColor="#ffff"
                    android:backgroundTint="@color/colorPrimary"
                    />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>